<!DOCTYPE html>
<html>
  {{>_head}}
  <body>
    <div class="container col-md-12">
      <div id="word row">
        {{#wordArr}}
          {{>_letter}}
        {{/wordArr}}
        {{^wordArr}}
          <p>No word here; why don't you check that code again, champ?</p>
        {{/wordArr}}
      </div>
      <form class="letterForm inline" action="/game" method="post">
        <label for="letter">Guess a letter!</label>
        <input type="text" name="letter" value="" maxlength="1" required>
        <input type="submit" name="submit" value="Guess!">
      </form>
    </div>
    {{#guesses}}
      {{>_guesses}}
    {{/guesses}}
  </body>
</html>
