<!DOCTYPE html>
<html>
  {{>_head}}
  <body>
    <div class="container">
      <div id="word">
        {{#word}}
          {{>_letter}}
        {{/word}}
      </div>
      <form class="letterForm inline" action="/game" method="post">
        <label for="letter">Guess a letter!</label>
        <input type="text" name="letter" value="" maxlength="1" required>
        <input type="submit" name="submit" value="Guess!">
      </form>
    </div>
  </body>
</html>
